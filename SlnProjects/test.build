<?xml version="1.0"?>
<project name="Test ProjectToContent" default="Test" basedir="."
	xmlns="http://nant.sf.net/release/0.85/nant.xsd">

	<property name="nant.settings.currentframework" value="net-3.5" overwrite="false" />

	<loadtasks assembly="bin/Debug/SlnToProjects.dll" />

	<target name="Test">

		<property name="Solution" value="C:\Users\Rob\Documents\Visual Studio 2008\Projects\IQZone\src - local2\Server\Server-10.sln" />

		<slntoprojects sln="${Solution}" delim=";" projectsproperty="ProjectList" />
		
		<foreach item="String" in="${ProjectList}" delim=";" property="Project">
			<property name="ProjectPath" value="${path::get-directory-name(Project)}" />
			<property name="ProjectName" value="${path::get-file-name(ProjectPath)}" />

			<echo message="Copy [${Project}] from [${ProjectPath}] to [${ProjectName}]"/>

		</foreach>

	</target>

</project>
